- if current_user && current_user.admin == true
  %h1 Recent Posts
  %ul
  - @matches.each do |match|
    - match.articles.each do |article|
      - unless article.body == nil
        %hr
        %h3
          = match.player.name
          vs
          = match.opponent.name
          = link_to "delete", matchup_article_path(match, article), :confirm => "Are you sure?", :method => :delete
        %li= article.body
- else
  %h2
    Hey Your not an Admin!
