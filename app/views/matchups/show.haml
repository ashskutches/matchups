%h1
  #vs-all
    #vs-each
      = image_tag("../img/characters/#{matchup.player.name}.jpg")
      %p
        #imgname      
          = image_tag("../img/names/#{matchup.player.name}.png")
    #vs-each    
      = image_tag("/img/vs.png")
    #vs-each
      = image_tag("../img/characters/#{matchup.opponent.name}.jpg")
      %p
        #imgname
          = image_tag("../img/names/#{matchup.opponent.name}.png")


%h2 Matchup tips
%ul.tips
  - unless tips.empty?
    - tips.each do |tip|
      %li
        .userName= tip.user.name
        = ':'
        = time_ago_in_words(tip.created_at)
        ago
        - if current_user == tip.user
          = link_to "(Edit)", edit_matchup_tip_path(matchup, tip)
        - unless tip.user.admin
          %p.body= tip.body
        - else
          %p= raw(tip.body)
  - else
    %li
      %strong Be the first of your friends to post a Tip!
-if current_user
  %h3 Got a tip?
  = render :partial => 'form'
-else
  %a{:href => "/users/sign_in"} Sign up / Sign in
    
  
