#content
  %h2
    = @match.player.name
    vs
    = @match.opponent.name
  #articles
    - @match.articles.each do |o|
      %table
        %hr
        %tr
          %td
            %p
              =o.body
  - if user_signed_in?
    %br
    = render 'form'
  - else
    %hr
    %br
    Got a tip to post?
    %b
      = link_to "Sign In", new_user_registration_path
