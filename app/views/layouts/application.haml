!!! XML
%html{:dir => "ltr", :lang => "en-US"}
  %head
    %meta{:charset => "UTF-8"}
    %title Match-up
    = stylesheet_link_tag 'http://gmpg.org/xfn/11', :media => 'profile'
    = stylesheet_link_tag 'global.css', :rel => 'stylesheet', :type => 'text/css'
    = stylesheet_link_tag 'theme.css', :rel => 'stylesheet', :type => 'text/css'
    = javascript_include_tag 'jquery-1.4.2.min.js'
    = javascript_include_tag 'cufon-yui.js'
    = javascript_include_tag 'Bebas_Neue_400.font.js'
    = javascript_include_tag 'jquery.quicksand.min.js'
    = javascript_include_tag 'jquery.easing.1.3.js'
    = javascript_include_tag 'jquery-css-transform.js'
    = javascript_include_tag 'jquery-animate-css-rotate-scale.js'
    = javascript_include_tag 'loopedslider.js'
    = javascript_include_tag 'myJS.js'
  %script{:type => "text/javascript"}
    :plain
      $(document).ready(function(){
        $('.search_input').focus();
        $(windowz).mouseover(function(){
          $('.no_show').fadeIn(1000);
        });
      });
  %body
    #header
      .header-content
        / .logo
        / Main menu
        #access{:role => "navigation"}
          .menu
            %ul
              %li.page_item.page-item-1
                %a.bebas-font{:href => "/"} Super Street Fighter 4
              %li.page_item.page-item-2
                %a.bebas-font{:href => "/feedbacks/new"} Feedback
    #wrapper
      / Page header
      .page_header
        %h1.bebas-font
          = link_to "Match-up", root_path
        %h2.bebas-font
          Learn * Play * Win
        .clearfloat
      / Breadcrumb
      .breadcrumb
        = render :partial => '/layouts/breadcrum'
        .clearfloat
      / Page content
      .page_content
        .sidebar_left
          .widget_search
            %form{:action => "", :name => ""}
              %fieldset
                %input#s{:name => "", :type => "text", :value => ""}/
                %a.search_btn{:href => "javascript:document.searchform.submit()"} Search
            .clearfloat
          = render :partial => '/layouts/sidebar'
        / Content right
        .content_right
          = yield 
          .clearfloat
      #footer
        = render :partial => '/layouts/footer'
        .clearfloat

