%html
  %head
    %meta{'name' => "description", :content => 'Learn and share Super Street fighter 4 match tips.'}/
    %title Matchuptips
    = render :partial => '/layouts/javascript'
    = stylesheet_link_tag 'global.css', :rel => 'stylesheet', :type => 'text/css'
    = csrf_meta_tag
  %body
    #wrapper
      #nav
        = render :partial => '/layouts/nav'
      #leftSidebar
        = render :partial => '/layouts/leftSidebar'
      #adminSidebar
        = render :partial => '/layouts/rightSidebar'
      #content
        #messages
          - if flash.any?
            =  flash[:notice]
            = flash[:failure]
            = flash[:success]
        = yield 
      #rightSidebar
        = render :partial => '/layouts/adminSidebar'
      #footer
        = render :partial => '/layouts/footer'
      #feedback-button
        = link_to image_tag("../img/stolenfeedback.jpg"), new_feedback_path
