#character_navigation
  %table
    %h1
      Your
      = image_tag("../img/characters/#{@character.name}.jpg")
      Player
    %p
      = link_to "(Switch Character)", root_path
    %br
    %h3
      Choose an Opponent!
    - @matches.sort.each_slice(12) do |group|
      %tr
        -group.each do |match|
          %td
            - unless match.opponent == nil
              = link_to image_tag("../img/characters/#{match.opponent.name}.jpg"), matchup_path(match)
%br
#articles
  %h2
    = image_tag("../img/characters/#{@character.name}.jpg")
    = @character.name
    Tips
  - @matches.sort.each do |match|
    - match.articles.each do |article|
      - unless article.body.nil?
        - @no_articles = true
        %ul
          %li
            %h4
              = image_tag("../img/characters/#{match.player.name}.jpg")
              = link_to "#{article.matchup.player.name} vs #{article.matchup.opponent.name}", matchup_path(article.matchup.id)
              = image_tag("../img/characters/#{match.opponent.name}.jpg")
            %p
              = raw(article.body)
              %br
                %i
                  Posted by:
                  = article.user.name
                  = ": #{time_ago_in_words(article.created_at)} ago"
  // Login/Signup or Post article
  - unless @no_articles == true
    %h3
      No Tips posted yet, be the first!
      - unless current_user
        %b
          = link_to "Sign In", user_session_path
          = "/  "
          = link_to "Sign Up", new_user_registration_path
