#characters
  %table
    %tr
      %td
        %h2= @character.name
    %tr
      %td
        #you
          = image_tag("../img/characters/#{@character.name}.jpg")
    %tr
      %td
        %h3
          Choose your opponent!
    %i
  %table
    - @matches.sort.each_slice(12) do |group|
      %tr
        -group.each do |match|
          %td
            - unless match.opponent == nil
              = link_to image_tag("../img/characters/#{match.opponent.name}.jpg"), matchup_path(match)
