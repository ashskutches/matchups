#character_navigation
  %table
    %h1 Share Street Fighter tips and master all your match-ups.
    %h3 Select your character!
    - @characters.map(&:name).sort.in_groups_of(12).each do |group|
      %tr
        - group.each do |o|
          %td
            - unless o == nil
              - o = Character.find_by_name(o)
              - match = Matchup.find_by_player(o.id)
              = link_to image_tag("../img/characters/#{o.name}.jpg") , character_path(o)
%br
#articles
  %h2 Recent Posts
  - @articles.each do |article|
    - unless article == nil
      %ul
        %li
          %h4
            = image_tag("../img/characters/#{article.matchup.player.name}.jpg")
            = link_to "#{article.matchup.player.name} vs #{article.matchup.opponent.name}", matchup_path(article.matchup.id)
            = image_tag("../img/characters/#{article.matchup.opponent.name}.jpg")
            - if current_user && current_user == article.user
              = link_to "(Edit)", edit_matchup_article_path(article.matchup, article)
          %br
          %i
            Posted by:
            = article.user.name
            = ": #{time_ago_in_words(article.created_at)} ago"
          %p
            = raw(article.body)
            %br
            %p
              #uparrow
                - unless article.count_likes == 0 
                  = image_tag("../img/uparrow.png")
                = "#{article.count_likes}"
                - if current_user
                  - if @likes.where( :article_id => article.id ).any?
                    =  '- You like this'
                  - else
                    = link_to '- Like this', like_path(article)
                - else 
                  people like this

