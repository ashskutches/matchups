#characters
  %h3 Select your character!
  %table
    - @characters.map(&:name).sort.in_groups_of(12).each do |group|
      %tr
        - group.each do |o|
          %td
            - unless o == nil
              - o = Character.find_by_name(o)
              = link_to image_tag("../img/characters/#{o.name}.jpg") , character_path(o.id)
  / %br
  / = render 'form'
