- if current_user && current_user.admin
  %h1 Recent Posts
  %h2= tips.count
  %ul
  - tips.each do |tip|
    - unless tip.body == nil
      %li
        %hr
        %h3
          = tip.player
          vs
          = tip.opponent
        = raw(tip.body)
        = tip.user.name
        = button_to "Delete", tip_path( tip), :method => :delete
- else
  %h2
    Hey Your not an Admin!
