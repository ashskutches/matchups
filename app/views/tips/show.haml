%h1
  .bigSpacer= link_to image_tag("../img/characters/#{tip.player}.jpg"), character_path(Character.find_by_name(tip.player)) 
  .bigSpacer= link_to image_tag("../img/characters/#{tip.opponent}.jpg"), character_path(Character.find_by_name(tip.opponent))
.spacer=image_tag("../img/names/#{tip.player}.png")
=image_tag("../img/vs.png", :height => "10%", :margin => "50px 0")
.spacer=image_tag("../img/names/#{tip.opponent}.png")
#section2
  %h2 Tip
  %hr
  #tip
    %p
      - unless tip.user.admin
        = image_tag("/img/quotes-open.png")
        =tip.body
        = image_tag("/img/quotes-close.png")
      - else
        = image_tag("/img/quotes-open.png")
        =raw(tip.body)
        = image_tag("/img/quotes-close.png")
      %b
        = tip.user.name
        = ':'
        = time_ago_in_words(tip.created_at)
        ago
        - if current_user == tip.user
          = link_to "(Edit)", edit_tip_path(tip)
#comments
  %h2 Comments
  %hr
  <div id="fb-root"></div><script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script><fb:comments href="matchuptips.com/tips/#{tip.id}" num_posts="5" width="550"></fb:comments>
